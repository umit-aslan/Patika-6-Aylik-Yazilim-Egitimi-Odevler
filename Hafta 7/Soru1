#include <stdio.h>
#include <string.h>

int main() {
    char cumle[1000];
    
    printf("Bir kelime veya cümle girin: ");
    fgets(cumle, sizeof(cumle), stdin);
    
    int uzunluk = strlen(cumle);
    
    printf("Girilen kelimenin veya cümlenin uzunluğu: %d\n", uzunluk);
    
    return 0;
}
